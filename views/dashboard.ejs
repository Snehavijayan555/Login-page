<%- include('header') -%>

<div class="text-center center-div mt-5" id="login">
    <div class="container w-25 border py-5 mt-5">
        <h3>Welcome to Express Dashboard</h3>
        <h5><%= locals.user ? user : "User" %></h5>
        <a href="/route/logout">Logout</a>
    </div>
</div>

<div class="row mt-6">
  <% movies.forEach(movie => { %>
      <div class="col-md-6">
          <div class="card">
              <div class="card-body">
                  <img src="<%= movie.photo %>" class="card-img-top" alt="<%= movie.name %>">
                  <h5 class="card-title font-weight-bold "><%= movie.name %></h5>
                  <p class="card-text">Year: <%= movie.year %></p>
                  <p class="card-text">Language: <%= movie.Language %></p>
              </div>
          </div>
      </div>
  <% }); %>
</div>


